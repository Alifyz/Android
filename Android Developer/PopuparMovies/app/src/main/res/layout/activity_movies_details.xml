<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.alifyz.popularmovies.MoviesDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_background"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_movie_title"
            style="@style/title_details" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_poster_details"
            style="@style/poster_details" />

        <LinearLayout
            android:id="@+id/ll_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_year"
                style="@style/year_details" />

            <TextView
                android:id="@+id/tv_duration"
                style="@style/duration_details" />

            <TextView
                android:id="@+id/tv_ratings"
                style="@style/ratings_details" />

            <ImageView
                android:id="@+id/tv_add_favorite"
                style="@style/favorite_details"
                android:src="@drawable/ic_favorite_black_24dp"
                android:text="@string/mark_favorite" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_movie_description"
        style="@style/description_details" />

</LinearLayout>
