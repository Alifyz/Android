<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.alifyz.popularmovies.MoviesDetailsActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/title_background"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_movie_title_fav"
                style="@style/title_details" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_poster_details_fav"
                style="@style/poster_details"
                android:contentDescription="@string/content" />

            <LinearLayout
                android:id="@+id/ll_header_fav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_year_fav"
                    style="@style/year_details" />

                <TextView
                    android:id="@+id/tv_duration_fav"
                    style="@style/duration_details"
                    android:text="@string/show_duration" />

                <TextView
                    android:id="@+id/tv_ratings_fav"
                    style="@style/ratings_details" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_movie_description_fav"
            style="@style/description_details" />

        <!-- Trailer Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/movie_trailer_icon_fav"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@string/content_trailer"
                android:padding="8dp"
                android:src="@drawable/ic_video_library_black_48dp" />

            <TextView
                android:id="@+id/textTrailer1_fav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingStart="8dp"
                android:text="@string/trailer_1"
                android:textSize="24sp" />
        </LinearLayout>

        <!-- Trailer Section -->

        <!-- Trailer Section -->


    </LinearLayout>
</ScrollView>