<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/CustomActionBar</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:windowContentTransitions">true</item>
        <!--<item name="android:windowEnterTransition">@transition/enter_transition</item>
        <item name="android:windowExitTransition">@transition/enter_transition</item>-->
    </style>

    <style name="CustomActionBar">
        <item name="android:fontFamily">@font/juaregular</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="header_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">36dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/desactiveStartColor</item>
        <item name="colorControlActivated">@color/activeStartColor</item>
        <item name="android:progressTint">@color/activeStartColor</item>
    </style>


</resources>
